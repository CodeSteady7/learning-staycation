<div class="tab-pane fade h" id="show-activity">
	<!-- DataTales Example -->
	<div class="card shadow mb-4 mt-2">
		<div class="card-body">
			<div class="row">
				<div class="col-md-5">
					<form action="/admin/item/add/activity" method="POST" enctype="multipart/form-data">
						<div class="form-group">
							<label for="name">Name</label>
							<input type="text" class="form-control" name="name" placeholder="Enter Name" required />
						</div>
						<div class="form-group">
							<label for="name">Type</label>
							<input type="text" class="form-control" name="type" placeholder="Enter Type" required />
						</div>
						<div class="form-group">
							<label for="name">Image</label>
							<input type="file" class="form-control" name="image" required />
						</div>
						<input type="hidden" value="<%= itemId %>" name="itemId" required />
						<button type="submit" class="btn btn-primary">save</button>
					</form>
					<a href="/admin/item" type="submit" class="btn btn-warning" style="display: inline-block; margin-top: 5px;">back </a>
				</div>
				<div class="col-md-7">
					<div class="table-responsive">
						<table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
							<thead>
								<tr>
									<th>No</th>
									<th>Name</th>
									<th>Type</th>
									<th>Image URL</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>
								<% for(let i = 0; i < activity.length; i++) { %>
								<tr>
									<td><%= i + 1 %></td>
									<td><%= activity[i].name %></td>
									<td><%= activity[i].type %></td>
									<td>
										<img src="https:/learning-staycation.herokuapp.com/<%= activity[i].imageUrl %>" alt="imageUrl" width="70px" />
									</td>

									<td>
										<form action="/admin/item/<%= itemId %>/activity/<%= activity[i].id %>?_method=DELETE" method="POST">
											<a href="javascript:void();" type="button" class="btn btn-warning btn-circle btn-sm button-update" data-id="<%= activity[i].id%>" data-name="<%= activity[i].name %>" data-type="<%= activity[i].type %>"> <i class="fas fa-edit"></i> </a>

											<button type="submit" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button>
											<!-- saat touch submit because function would leads form action -->
										</form>
									</td>
								</tr>
								<% } %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
